{
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["es2018", "dom"],
    "target": "es6",
    "skipLibCheck": true,
    "declaration": true,
    "inlineSourceMap": false,
    "strict": true,
    "pretty": true,
    "removeComments": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "allowUmdGlobalAccess": true
  },
  "include": ["./src"]
}
